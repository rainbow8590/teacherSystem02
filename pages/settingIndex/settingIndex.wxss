/**index.wxss**/
page{
  height: 100%;
}
.container{
  padding: 0;
  justify-content: flex-start;
}

.flex{
  display: flex;
}

.wrap{
  position: relative;
  width: 100%;
  padding: 0 20rpx;
  padding-top: 144rpx;
  padding-bottom: 20rpx;
  background: #fafafa;
  box-sizing: border-box;
  flex-wrap:  wrap;
}
.wrap1{
  padding-top: 0;
}

.wrap .item{
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 47%;
  margin: 0 10rpx;
  border-radius: 10rpx;
  height: 260rpx;
  box-shadow: 0 0 10rpx #ccc;
  color: #525252;
  font-size: 26rpx;
}
.wrap .item image{
  width: 52rpx;
  height: 48rpx;
}
.activeStyle{
  background: #1FBB1C;
  color: #fff !important;
}
/*  导航   */
.tabBar{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 109rpx;
  border-top: 1px solid #DADADA;
}
.tabBar .tabItem{
  width: 33.3%;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #525252;
}
.tabBar .tabItem image{
  width: 52rpx;
  height: 47rpx;
}
